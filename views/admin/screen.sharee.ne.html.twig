{# src/AppBundle/Resources/views/Admin/screenresulte.html.twig #} 
{% extends 'admin/init.html.twig' %} 

{% block js %}
	 {{ parent() }}
    <script>
    	var twig = twig || {};
    	var u = u || {};
    	twig.screen_sharee_title1				= "{{ screen_sharee_title1 }}";
    	twig.screen_sharee_title2				= "{{ screen_sharee_title2 }}";
    	twig.screen_sharee_title3				= "{{ screen_sharee_title3 }}";
    	twig.screen_sharee_title4				= "{{ screen_sharee_title4 }}";
    	twig.screen_sharee_title5				= "{{ screen_sharee_title5 }}";
    </script>
{% endblock %}

{% block body %}
	<div id="" class="container">

		<div id="panel" class="panel panel-default">
			<div class="panel-heading">
            		<a class="btn btn-link" href="{{ path('admin_screen') }}" style="">Back to Content</a>
            </div>
			<div class="panel-body">
               <form action="{{ path('admin_screen_sharee_ne',{
               		'qid':screensharee.quiz.id,
               		'eid':screensharee.id
               		}) }}" method="post" id="f-admin-screen-sharee" data-toggle="validator" role="form">
                	<div class="row">
        				<div class="col-sm-3">
                    		<select class="selectpicker sel-quiz" id="sel-quiz-sharee" data-mobile="true">
                    			<option value="">-</option>
                    			{% for quiz in quizs %}
                              		<option 
                              			{% if app.request.get('qid') == quiz.id %}selected="selected"{% endif %}
                              			{% if quiz.sharee is null %}{% set sharee_id = 0 %}{% else %}{% set sharee_id = quiz.sharee.id %}{% endif %}
                              			value="{{ path('admin_screen_sharee_ne',{'qid':quiz.id,'eid':sharee_id})}}">{{ quiz.title }}</option>
                              	{% endfor %}
                            </select>
                    	</div>
                    	<div class="col-sm-3">
                    	</div>
                    	<div class="col-sm-3">
                    		<div class="form-field">
                        		<div
        							class="btn-group"
        							role="group"
        						>
                        			<button class="btn btn-success btn" type="submit">Speichern</button>
                        		</div>
                        		<div
        							class="btn-group"
        							role="group"
        						>
                        			<span id="btn-screen-sharee-reset" class="btn btn-warning" >Alles auf Standard</span>
                        		</div>
                        	</div>
                    	</div>
                    	<div class="col-sm-3">
                    	</div>
                	</div>
                	<br/><br/>
                	<div class="form-group">
        				<label for="{{ form.title1.vars.id }}">Überschrift</label>
        				{{ form_widget(form.title1) }}
        				<div class="help-block with-errors">{{ form_errors(form.title1) }}</div>
        			</div>
        			
        			<div class="form-group">
        				<label for="{{ form.title2.vars.id }}">Unterüberschrift</label>
        				{{ form_widget(form.title2) }}
        				<div class="help-block with-errors">{{ form_errors(form.title2) }}</div>
        			</div>
        			
        			
        			<div class="form-group">
        				<label for="{{ form.title3.vars.id }}">Überschrift Share-Paket</label>
        				{{ form_widget(form.title3) }}
        				<div class="help-block with-errors">{{ form_errors(form.title3) }}</div>
        			</div>
        			
        			<div class="form-group">
        				<label for="{{ form.title4.vars.id }}">Text Share-Paket <small>(was man sharen kann, hängt von den Einstellungen des Quiz ab)</small></label>
        				{{ form_widget(form.title4) }}
        				<div class="help-block with-errors">{{ form_errors(form.title4) }}</div>
        			</div>
                	
        			<div class="form-group">
        				<label for="{{ form.title5.vars.id }}">Text auf Button "Jetzt teilen"</label>
        				{{ form_widget(form.title5) }}
        				<div class="help-block with-errors">{{ form_errors(form.title5) }}</div>
        			</div>
        			
                	
        			<div style="display: none">
        			    {{ form_rest(form) }}
        			    <input type="hidden" value="{{ screensharee.id }}" id="screensharee_id">
        			</div>
            		
                
            		<script type="text/javascript">
            		//
            		$( "#" ).each(function(index) {
            			
            		});
            		</script>
               </form>
    		</div>
		</div>
	</div>
   
{% endblock %} 