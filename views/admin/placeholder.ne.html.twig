{# src/AppBundle/Resources/views/Admin/carlogtage.html.twig #}
{% extends 'admin/init.html.twig' %}

{% block body %}
    <div id="" class="container">

        <div id="panel" class="panel panel-default">
            <div class="panel-heading">
                <a class="btn btn-link" href="{{ path('admin_placeholder') }}" style="">Back to Placehoders</a>
            </div>
            <div class="panel-body">
                <form action="{{ path('admin_placeholder_ne',{'eid':placeholder.id}) }}" method="post" id="f-admin-placeholder" data-toggle="validator" role="form">

                    <div class="form-group">
                        <label for="{{ form.quiz.vars.id }}">PH zu Quiz</label>
                        {{ form_widget(form.quiz, { 'attr': { 'class':'select2' } } ) }}
                        <div class="help-block with-errors">
                            {{ form_errors(form.quiz) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="{{ form.ph.vars.id }}">Name</label>
                        {{ form_widget(form.ph) }}
                        <div class="help-block with-errors">{{ form_errors(form.ph) }}</div>
                    </div>

                    <div class="form-group">
                        <label for="{{ form.what.vars.id }}">Typ</label>
                        {{ form_widget(form.what, {'label_attr': {'class': 'radio-inline'}}) }}
                        <div class="help-block with-errors">{{ form_errors(form.what) }}</div>
                    </div>

                    <div class="form-group">
                        <label for="{{ form.val.vars.id }}">Wert</label>
                        {{ form_widget(form.val) }}
                        <div class="help-block with-errors">{{ form_errors(form.val) }}</div>
                    </div>

                    <div style="display: none">{{ form_rest(form) }}</div>
                    <div class="form-field">
                        <button class="btn btn-success btn" type="submit">Speichern</button>
                    </div>

                    <script type="text/javascript">
                        //
                        $("#").each(function (index) {});
                    </script>
                </form>
            </div>
        </div>
    </div>

{% endblock %}