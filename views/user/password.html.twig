{# twig #} 
{% extends 'user/init.html.twig' %} 

{% block gtm %}
    {{ parent() }}
	<script type="text/javascript">
		window.dataLayer.push({
  			'pageTitle' : 'Change Password',
			'pageCategory' : 'Profile',
			'pageURI' : '/profile/change-password.html',
			'visitorType' : '{{ visitorType }}',
			'difficultyScore' : ''
		});
	</script>
{% endblock gtm %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block js %}
    {{ parent() }}
{% endblock %}


	{% block master_content %}
		{% include 'user/nav.html.twig' with {'a': '2'}  %}
		<div class="content-wrapper startseite">
			<h1>{{screen_changepassword_h1}}</h1>
        	<p class="subheadline">{{screen_changepassword_subhead}}</p>
        	<form action="{{ path('my_password') }}" method="post" class="f-user" id="f-my-password" data-toggle="validator" role="form">
                
                <div class="form-group">
					{{ form_widget(form.pwd, { 'attr': {
						'placeholder': screen_changepassword_form_placeholder_oldpassword,
						'data-error': msg_user_old_password_empty,
						} }) }}
        			<div class="help-block with-errors">{{ form_errors(form.pwd) }}</div>
				</div>	
            	
            	<div class="form-group">
					{{ form_widget(form.password.pass1, { 'attr': {
						'placeholder': screen_changepassword_form_placeholder_newpassword,
						'data-error': msg_user_new_password_empty,
						'data-minlength': '3',
						'data-minlength-error': msg_user_password_minlength,
						'data-maxlength': '25',
						'data-maxlength-error': msg_user_password_maxlength,
						} }) }}
        			<div class="help-block with-errors">{{ form_errors(form.password.pass1) }}</div>
				</div>
				<div class="form-group">
					{{ form_widget(form.password.pass2, { 'attr': {
						'placeholder': screen_changepassword_form_placeholder_reenternewpassword,
						'data-match':'#user_password_pass1',
						'data-match-error': msg_user_password_match_error,
						'data-error': msg_user_repeat_old_password_empty,
						'data-minlength': '3',
						'data-minlength-error': msg_user_password_minlength,
						'data-maxlength': '25',
						'data-maxlength-error': msg_user_password_maxlength,
						} }) }}
					<div class="help-block with-errors">{{ form_errors(form.password.pass2) }}</div>
				</div>
            	
            	
            	<div style="display:none ">
            	    {{ form_rest(form) }}
            	</div>
            	<button type="submit" id="btn-my-password" class="btn btn-mail-signup">{{screen_changepassword_button_save}}</button>
            
        		<script type="text/javascript">
        		//
        		$( "#" ).each(function(index) {
        			
        		 });
        		</script>
           </form>
        </div> 
        <!-- close #content-wrapper -->
        
        <div class="minheight"></div>
    {% endblock %} 
    
